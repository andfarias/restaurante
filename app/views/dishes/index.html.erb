<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Preco</th>
      <th>Tempopreparo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><b><%= dish.descricao %></b></td>
        <td><%= dish.preco %></td>
        <td><%= dish.tempopreparo %></td>
        <td><%= link_to 'Visualisar', dish %></td>
        <td><%= link_to 'Editar', edit_dish_path(dish) %></td>
        <td><%= link_to 'Excluir', dish, method: :delete, data: { confirm: 'VocÃª tem certeza disso?' } %></td>
      </tr>
        <td colspan="6" style="padding-bottom: 15px">

          <span>Ingredients: </span>
          <% dish.ingredients.order('descricao').each  {|ingredient| %>
            <i><%= ingredient.descricao %>, </i>
          <% } %>
        </td>
    <% end %>
  </tbody>
</table>



